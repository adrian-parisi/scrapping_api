# ZenRows Device Profile API - Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Database Configuration
# For development, using SQLite for simplicity
# For production, use PostgreSQL: postgresql://user:password@localhost:5432/zenrows_api
DATABASE_URL=sqlite:///./zenrows_api.db

# API Key Security
# Generate a strong, random pepper for API key hashing
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY_PEPPER=your-super-secret-pepper-change-this-in-production-2024

# Request Limits
# Maximum request body size (1MB)
MAX_REQUEST_SIZE=1048576

# Environment Configuration
ENVIRONMENT=development
DEBUG=true
